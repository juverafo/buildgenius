{% extends 'base.html.twig' %}
{% block title %}Question de montage PC
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css">
{% endblock %}
{% block body %}
    <div class="container my-3">
        <div class="row">
        <h1 class="text-center mb-3">Quiz pour montage PC</h1>
            <div class="col-lg-8 offset-lg-2">
                <form id="quizForm" action="" method="post">
                    {% for question in questions %}
                        {% if question.quiz.id == 1 %}
                            <p class="fw-bolder">{{ question.name }}</p>
                            {% for answer in answers %}
                                {% if question.id == answer.question.id %}
                                    <div class="form-check question-{{ question.id }} my-3">
                                        <input class="form-check-input" type="radio" name="answers[{{ question.id }}]" id="answer{{ answer.id }}" value="{{ 'Question: ' ~ question.id ~ ' - ' ~ 'RÃ©ponse: ' ~ answer.id }}">
                                        <label class="form-check-label" for="answer{{ answer.id }}">
                                            {{ answer.answer }}
                                        </label>
                                    </div>
                                {% endif %}
                            {% endfor %}
                        {% endif %}
                    {% endfor %}
                    <button type="submit" class="btn btn-primary">Soumettre</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
{% endblock %}
