{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container my-3">
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ "Identifiants incorrects. Veuillez vérifier votre adresse e-mail et votre mot de passe." }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnecter</a>
            </div>
        {% endif %}
        <h1>Connexion</h1>
        <label for="email" class="mb-2">Adresse email</label>
        <input type="email" value="{{ last_username }}" name="email" id="email" class="form-control" autocomplete="email" required autofocus>
        <label for="password" class="mb-2">Mot de passe</label>
        <input type="password" name="password" id="password" class="form-control mb-2" autocomplete="current-password" required> 
        <br>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <a href="{{path('reset_password')}}">Mot de passe oublié?</a>
        <br>
        <button class="btn btn-lg btn-primary my-2" type="submit">
            Se connecter
        </button>
    </form>
</div>
{% endblock %}
