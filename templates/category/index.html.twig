{% extends 'backoffice.html.twig' %}

{% block title %}Gestion des categories{% endblock %}

{% block body %}
<style>
    /* Style pour la mise en page */
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <!-- Affichage du nombre de catégories dans la table -->
    <p>Nombre de catégories dans la table: {{ categories | length }}</p>
    <div>
        <div>
            <!-- Affichage du formulaire -->
            {{ form(form) }}
        </div>
        {% if categories | length > 0 %}
        <div>
        <!-- Affichage du tableau des catégories -->
        <table class="table table-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Categories</th>
            <th scope="col">Type</th>
            <th scope="col">Modifier / Supprimer</th>
        </tr>
        {% for category in categories %}
        <tr>
            <th scope="row">{{ category.id }}</th>
            <td>{{ category.name }}</td>
            <td>{{ category.type }}</td>
            <td>
                <!-- Boutons pour modifier et supprimer une catégorie -->
                <a href="{{url('admin_category_update', {'id': category.id})}}" class="btn btn-warning">Modifier</a>
                <a href="{{url('admin_category_delete', {'id': category.id})}}" class="btn btn-danger" onclick= "return confirm('Vous êtes sûr de vouloir supprimer?')">Supprimer</a>
            </td>
        </tr>
        {% endfor %}
        </table>
        </div>
        {% else %}
        <!-- Message affiché s'il n'y a pas de catégories -->
        <p>Aucune catégorie pour l'instant</p>
        {% endif %}
    </div>
</div>
{% endblock %}
