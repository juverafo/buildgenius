        <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet"> #}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.3.1/css/all.min.css" integrity="sha512-KulI0psuJQK8UMpOeiMLDXJtGOZEBm8RZNTyBBHIWqoXoPMFcw+L5AEo0YMpsW8BfiuWrdD1rH6GWGgQBF59Lg==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
        {# <!-- Vos feuilles de style personnalisées --> #}
        <link href="{{ asset('css/sb-admin-2.min.css') }}" rel="stylesheet">
        <link href="{{ asset('css/sb-admin-2.css') }}" rel="stylesheet">
    {% endblock %}
{% block importmap %}{{ importmap('app') }}{% endblock %}
</head>

<body id="page-top">
    {# <!-- Wrapper --> #}
    <div id="wrapper">
        {# <!-- Sidebar --> #}
        <ul class="navbar-nav  text-white sidebar sidebar-dark accordion" id="accordionSidebar" style="background-color: #000000;">
            {# <!-- Sidebar - Brand --> #}
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="{{ path('app_admin') }}">
                <div class="sidebar-brand-icon">
                    {# <!-- Icône ou logo de la barre latérale --> #}
                    <img src="{{asset('img/logo_buildgenius.png')}}" alt="logo" width="50px">
                </div>
                <div class="sidebar-brand-text mx-3">BuildGenius</div>
            </a>
            {# <!-- Divider --> #}
            <hr class="sidebar-divider my-0">
            {# <!-- Nav Item - Dashboard --> #}
            <li class="nav-item">
                <a class="nav-link" href="{{ path('app_admin') }}">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            {# <!-- Divider --> #}
            <hr class="sidebar-divider">
            {# <!-- Heading --> #}
            <div class="sidebar-heading">GESTION</div>
            {# <!-- Gestion des composants --> #}
            <li class="nav-item">
                <a class="nav-link collapsed" href="{{ path('admin_product') }}">
                    <i class="fas fa-fw fa-wrench"></i>
                    <span>Gestion des composants</span>
                </a>
            </li>
            {# <!-- Divider --> #}
            <hr class="sidebar-divider">
            {# <!-- Gestion des catégories --> #}
            <li class="nav-item">
                <a class="nav-link collapsed" href="{{path('admin_category')}}">
                    <i class="fas fa-fw fa-wrench"></i>
                    <span>Gestion des catégories</span>
                </a>
            </li>
            {# <!-- Divider --> #}
            <hr class="sidebar-divider">
            <li class="nav-item">
                <a class="nav-link collapsed" href="{{ path('users') }}">
                    <i class="fas fa-fw fa-wrench"></i>
                    <span>Gestion des utilisateurs</span>
                </a>
            </li>
            <hr class="sidebar-divider">
            <li class="nav-item">
                <a class="nav-link collapsed" href="{{ path('quiz_results') }}">
                    <i class="fas fa-fw fa-wrench"></i>
                    <span>Gestion des quiz</span>
                </a>
            </li>
            <hr class="sidebar-divider">
            <li class="nav-item">
                <a class="nav-link collapsed" href="{{ path("purchases") }}">
                    <i class="fas fa-fw fa-wrench"></i>
                    <span>Gestion des commandes</span>
                </a>
            </li>
        </ul>
        {# <!-- End of Sidebar --> #}
        {# <!-- Content Wrapper --> #}
        <div id="content-wrapper" class="d-flex flex-column">
            {# <!-- Main Content --> #}
            <div id="content">
                {# <!-- Topbar --> #}
                <nav id="test" class="navbar navbar-expand navbar-light  topbar mb-4 static-top shadow" style="background-color: #000000;">
                    {# <!-- Bouton de bascule de la barre latérale --> #}
                        <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3"><i class="fa fa-bars"></i></button>
                    {# <!-- Lien de retour au site --> #}
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link " href="{{ path('app_home') }}" role="button">
                                <span class="mr-2 d-none d-lg-inline text-gray-600 small">Retour au site</span>
                            </a>
                        </li>
                    </ul>
                </nav>
                {# <!-- End of Topbar -->
                <!-- Messages flash --> #}
                <div class="container col-3 ">
                    {% for label, msgs in app.flashes %}
                        {% for msg in msgs %}
                            <div class="alert alert-{{ label }} text-center">
                                {{ msg }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                </div>
                {# <!-- Contenu principal --> #}
                <div class="container-fluid">
                    {# <!-- Titre de la page --> #}
                    <h1 class="text-center m-5"> {% block titre %}{% endblock %}
                        </h1>
                        {# <!-- Bloc de contenu principal spécifique à chaque page --> #}
                        {% block body %}{% endblock %}
                    </div>
                </div>
                {# <!-- End of Content Wrapper --> #}
            </div>
            {# <!-- End of Page Wrapper -->
            <!-- Bouton de retour en haut --> #}
            <a class="scroll-to-top rounded" href="#page-top">
                <i class="fas fa-angle-up"></i>
            </a>
        </div>
  
